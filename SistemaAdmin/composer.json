{
    "name": "sistema-admin/eest2",
    "description": "Sistema Integral de Gestión Educativa E.E.S.T N°2",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Sistema Admin EEST2",
            "email": "admin@eest2.edu.ar"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2"
    },
    "autoload": {
        "psr-4": {
            "SistemaAdmin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test-coverage": "phpunit --configuration phpunit.xml --coverage-html coverage",
        "test-unit": "phpunit --configuration phpunit.xml tests/Unit",
        "test-integration": "phpunit --configuration phpunit.xml tests/Integration"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
